{
    "env": {
        "node": true,
        "es2022": true
    },
    "extends": [
        "eslint:recommended",
        "@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "warn",
            "tab"
        ],
        "no-tabs": "off",
        "no-mixed-spaces-and-tabs": [
            "warn",
            "smart-tabs"
        ]
    }
}